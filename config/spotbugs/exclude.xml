<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- Exclude generated files -->
    <Match>
        <Or>
            <Package name="~.*\.target\..*"/>
            <Package name="~.*\.build\..*"/>
            <Package name="~.*\.generated\..*"/>
        </Or>
    </Match>
    
    <!-- Exclude test files from certain checks -->
    <Match>
        <Class name="~.*Test.*"/>
        <Bug pattern="DM_DEFAULT_ENCODING"/>
    </Match>
    
    <!-- Exclude DTOs from serialization warnings -->
    <Match>
        <Or>
            <Class name="~.*Request"/>
            <Class name="~.*Response"/>
            <Class name="~.*Dto"/>
        </Or>
        <Bug pattern="SE_NO_SERIALVERSIONID"/>
    </Match>
    
    <!-- Exclude Spring Boot main class -->
    <Match>
        <Class name="~.*Application"/>
        <Bug pattern="DM_EXIT"/>
    </Match>
    
    <!-- Exclude JPA entities from field access warnings -->
    <Match>
        <Class name="~.*Entity"/>
        <Bug pattern="UWF_UNWRITTEN_FIELD"/>
    </Match>
    
    <!-- Exclude utility classes -->
    <Match>
        <Class name="~.*Util.*"/>
        <Bug pattern="UC_USELESS_OBJECT"/>
    </Match>
    
    <!-- Common false positives for financial calculations -->
    <Match>
        <Bug pattern="FE_FLOATING_POINT_EQUALITY"/>
    </Match>
</FindBugsFilter>