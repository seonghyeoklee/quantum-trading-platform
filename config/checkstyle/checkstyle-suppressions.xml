<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
    "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
    "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <!-- Suppress checks for generated files -->
    <suppress files=".*[\\/]target[\\/].*" checks=".*"/>
    <suppress files=".*[\\/]build[\\/].*" checks=".*"/>
    <suppress files=".*[\\/]generated[\\/].*" checks=".*"/>
    
    <!-- Suppress checks for test files -->
    <suppress files=".*Test\.java" checks="MagicNumber"/>
    <suppress files=".*Test\.java" checks="MethodLength"/>
    <suppress files=".*Test\.java" checks="ParameterNumber"/>
    
    <!-- Suppress checks for configuration classes -->
    <suppress files=".*Config\.java" checks="ParameterNumber"/>
    <suppress files=".*Configuration\.java" checks="ParameterNumber"/>
    
    <!-- Suppress checks for DTOs -->
    <suppress files=".*Request\.java" checks="ParameterNumber"/>
    <suppress files=".*Response\.java" checks="ParameterNumber"/>
    <suppress files=".*Dto\.java" checks="ParameterNumber"/>
    
    <!-- Suppress checks for Application main class -->
    <suppress files=".*Application\.java" checks="HideUtilityClassConstructor"/>
    
    <!-- Suppress final parameters for Spring components -->
    <suppress files=".*Controller\.java" checks="FinalParameters"/>
    <suppress files=".*Service\.java" checks="FinalParameters"/>
    <suppress files=".*Repository\.java" checks="FinalParameters"/>
</suppressions>